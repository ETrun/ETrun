	MULTI( 8, 110, (SUBWINDOW_WIDTH)-4, 10, "Accel smoothness:", .2, 8, "cg_accelSmoothness", cvarFloatList { "10" 10 "50" 50 "100" 100 "500" 500 "1000" 1000}, "How sensitive the accel reacts" )

