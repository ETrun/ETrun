	// Pressed keys
	//
	SUBWINDOW( 6+(SUBWINDOW_WIDTH)+6, 228, (SUBWINDOW_WIDTH), 80, "PRESSED KEYS" )
	MULTI( 6+(SUBWINDOW_WIDTH)+6+2, 244, (SUBWINDOW_WIDTH)-4, 10, "Show pressed keys:", .2, 8, "cg_drawKeys", cvarFloatList { "No" 0 "Type 1" 1 "Type 2" 2 "Type 3" 3}, "Show pressed keys" )
