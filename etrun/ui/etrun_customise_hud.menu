	// CGaz
	//
	SUBWINDOW( 6, 128, (SUBWINDOW_WIDTH), 30, "CGAZ" )
	MULTI( 8, 144, (SUBWINDOW_WIDTH)-4, 10, "Show CGaz:", .2, 8, "cg_drawCGaz", cvarFloatList { "No" 0 "Type 1" 1 "Type 2" 2 "Type 3" 3 "Type 4" 4}, "Show CGaz on HUD" )

