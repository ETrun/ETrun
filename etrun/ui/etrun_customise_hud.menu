	// Timer
	//
	SUBWINDOW( 6, 162, (SUBWINDOW_WIDTH), 60, "TIMER" )
	YESNO( 8, 178, (SUBWINDOW_WIDTH)-4, 10, "Show timer:", .2, 8, "cg_drawTimer", "" )
	SLIDER( 8, 195, (SUBWINDOW_WIDTH)-4, 10, "Timer X-position:", .2, 8, "cg_timerX" 320 0 640, "Use the slider to move the timer" )
