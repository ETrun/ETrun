	// Checkpoints
	//
	SUBWINDOW( 6, 228, (SUBWINDOW_WIDTH), 80, "CHECKPOINTS" )
	YESNO( 8, 244, (SUBWINDOW_WIDTH)-4, 10, "Show checkpoints:", .2, 8, "cg_drawCheckPoints", "" )
	SLIDER( 8, 260, (SUBWINDOW_WIDTH)-4, 10, "Checkpoints X-position:", .2, 8, "cg_checkPointsX" 320 0 640, "Use the slider to move checkpoints" )
	CVARFLOATLABEL( 8, 260, (SUBWINDOW_WIDTH)-4, 10, "cg_checkPointsX", .2, ITEM_ALIGN_RIGHT, $evalfloat((SUBWINDOW_WIDTH)-4), 8 )
